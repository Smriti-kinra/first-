#FUNCTIONS
def data():

    cur.execute("CREATE DATABASE IF NOT EXISTS CARBONOMICS")
    cur.execute("USE CARBONOMICS")
    
    cur.execute("CREATE TABLE IF NOT EXISTS STUDY(SRNO INT PRIMARY KEY AUTO_INCREMENT,TYPE VARCHAR(30) NOT NULL,GRP VARCHAR(30),FORMULA VARCHAR(125) UNIQUE NOT NULL,NAME VARCHAR(125) UNIQUE NOT NULL)")
    
    alkanes=[('CH‚ÇÉ-CH(CH‚ÇÉ)-CH‚ÇÇ-CH‚ÇÉ','2-Methylbutane'),('CH‚ÇÉ-C(CH‚ÇÇ)(CH‚ÇÇ)-CH‚ÇÉ','2,2-Dimethylpropane'),('CH‚ÇÉ-CH(CH‚ÇÇ)-CH(CH‚ÇÇ)-CH‚ÇÉ','2,3-Dimethylbutane'),('CH‚ÇÉ-CH(CH‚ÇÉ)-CH‚ÇÇ-CH(CH‚ÇÉ)-CH‚ÇÉ','2,4-Dimethylpentane'),('CH‚ÇÉ-CH‚ÇÇ-CH‚ÇÇ-CH(CH‚ÇÇ-CH‚ÇÉ)-CH‚ÇÇ-CH‚ÇÉ','3-Ethylhexane')]
    
    alkenes=[('CH‚ÇÇ=C(CH‚ÇÉ)-CH‚ÇÇ-CH‚ÇÉ','2-Methylbutene'),('CH‚ÇÉ-CH=CH-CH‚ÇÇ-CH‚ÇÉ','Pent-2-ene'),('CH‚ÇÉ-CH=CH-C(CH‚ÇÉ)(CH‚ÇÉ)-CH‚ÇÇ','4,4-Dimethylpent-2-ene'),('CH‚ÇÉ-CH‚ÇÇ-CH=CH-CH(CH‚ÇÉ)-CH‚ÇÉ','5-Methylhex-3-ene'),('CH‚ÇÇ=C(CH‚ÇÉ)-CH‚ÇÇ-CH(CH‚ÇÇ-CH‚ÇÉ)-CH‚ÇÇ-CH‚ÇÇ-CH‚ÇÉ','4-Ethyl-2-methylheptene')]
    
    alkynes=[('CH‚ò∞C-CH(CH‚ÇÉ)-CH‚ÇÉ','3-Methylbutyne'),('CH‚ÇÉ-C‚ò∞C-CH(CH‚ÇÉ)-CH‚ÇÉ','4-Methylpent-2-yne'),('CH‚ÇÉ-C‚ò∞C-C(CH‚ÇÉ)(CH‚ÇÉ)-CH‚ÇÇ-CH‚ÇÇ-CH‚ÇÉ','4,4-Dimethylhept-2-yne'),('CH‚ÇÉ-CH(CH‚ÇÉ)-C‚ò∞C-CH(CH‚ÇÉ)-CH‚ÇÉ','2,5-Dimethylhex-3-yne'),('CH‚ÇÉ-CH(CH‚ÇÉ)-CH‚ÇÇ-C‚ò∞C-CH‚ÇÇ-C(CH‚ÇÉ)(CH‚ÇÉ)-CH‚ÇÉ','2,2,7-Trimethyloct-4-yne')]
    
    alcohols=[('CH‚ÇÉ-CH‚ÇÇ-CH‚ÇÇ-CH‚ÇÇ-OH','Butanol'),('CH‚ÇÉ-CH(OH)-CH‚ÇÇ-CH‚ÇÉ','Butan-2-ol'),('CH‚ÇÉ-CH(OH)-CH‚ÇÇ-CH(CH‚ÇÉ)-CH‚ÇÉ','4-Methylpentan-2-ol'),('CH‚ÇÉ-CH(OH)-CH‚ÇÇ-CH(OH)-CH‚ÇÉ','Pentan-2,4-diol'),('CH‚ÇÉ-CH‚ÇÇ-CH(OH)-CH(CH‚ÇÇ-CH‚ÇÉ)-CH(CH‚ÇÉ)-CH‚ÇÉ','4-Ethyl-5-methylhexan-3-ol')]
    
    aldehydes=[('CH‚ÇÉ-CH‚ÇÇ-CHO','Propanal'),('CH‚ÇÉ-CH(CHO)-CH‚ÇÇ-CH‚ÇÉ','Butan-2-al'),('C‚ÇÜH‚ÇÖ-CHO','Benzaldehyde'),('CH‚ÇÉ-CH(CHO)-CH‚ÇÇ-CH(CHO)-CH‚ÇÉ','Pentan-2,4-dial'),('CH‚ÇÉ-CH(CH‚ÇÉ)-CH‚ÇÇ-CH‚ÇÇ-CH‚ÇÇ-CHO','5-Methylhexanal')]
    
    ketones=[('CH‚ÇÇ-CO-CH‚ÇÇ-CH‚ÇÇ','Propan-2-one'),('CH‚ÇÉ-CH‚ÇÇ-CO-CH‚ÇÇ-CH‚ÇÉ','Pentan-3-one'),('CH‚ÇÉ-CH(CH‚ÇÇ-CH‚ÇÉ)-CH‚ÇÇ-CO-CH‚ÇÉ','4-Ethylpentan-2-one'),('CH‚ÇÉ-CH(CH‚ÇÉ)-CH‚ÇÇ-CO-CH‚ÇÇ-CH‚ÇÇ-CH‚ÇÇ-CH‚ÇÉ','2-Methyloctan-4-one'),('CH‚ÇÉ-CO-CH(CH‚ÇÉ)-CH‚ÇÇ-CH(CH‚ÇÇ-CH‚ÇÉ)-CH‚ÇÉ','5-Ethyl-3-methylhexan-2-one')]
    
    carboxylicacids=[('HCOOH','Methanoic acid'),('CH‚ÇÉ-CH‚ÇÇ-COOH','Propanoic acid'),('HOOC-CH‚ÇÇ-COOH','Propanedioic acid'),('HOOC-CH‚ÇÇ-CH(COOH)-CH‚ÇÇ-COOH ','Propane-1,2,3-tricarboxylic acid'),('CH‚ÇÉ-CH(COOH)-CH‚ÇÇ-CH‚ÇÇ-CH‚ÇÇ-CH‚ÇÉ','2-Methylhexanoic acid')]
    
    ethers=[('CH‚ÇÉ-O-CH‚ÇÉ','Methoxymethane'),('CH‚ÇÉ-O-CH‚ÇÇ-CH‚ÇÉ','Methoxyethane'),('C‚ÇÜH‚ÇÖ-O-CH‚ÇÉ','Methoxybenzene'),('CH‚ÇÉ-O-CH(CH‚ÇÉ)-CH‚ÇÉ','2-Methoxypropane'),('CH‚ÇÉ-O-CH‚ÇÇ-CH‚ÇÇ-O-CH‚ÇÉ)','1,2-Dimethoxyethane')]
    
    amines=[('CH‚ÇÉ-CH‚ÇÇ-NH‚ÇÇ','Ethanamine'),('CH‚ÇÉ-CH(NH‚ÇÇ)-CH‚ÇÉ','Propan-2-amine'),('CH‚ÇÉ-NH-CH‚ÇÇ-CH‚ÇÉ','N-Methylethanamine'),('CH‚ÇÉ-N(CH‚ÇÉ)-CH‚ÇÉ','N,N-Dimethylmethanamine'),('CH‚ÇÉ-N(CH‚ÇÉ)-CH‚ÇÇ-CH‚ÇÇ-CH‚ÇÇ-CH‚ÇÉ','N,N-Dimethylbutanamine')]
    
    alkylhalides=[('CH‚ÇÉ-CH‚ÇÇ-CH‚ÇÇ-CH‚ÇÇ-Br','Bromobutane'),('CH‚ÇÉ-CH(Cl)-CH‚ÇÉ','2-Chloropropane'),('CH‚ÇÇ(Cl)-CH(CH‚ÇÉ)-CH‚ÇÇ-CH‚ÇÇ-CH‚ÇÉ','1-Chloro-2-methylpentane'),('CH‚ÇÉ-CH(Cl)-CH‚ÇÇ-CH(Br)-CH‚ÇÉ','2-Bromo-4-chloropentane'),('CH‚ÇÉ-CH‚ÇÇ-CH(I)-CH(CH‚ÇÇ-CH‚ÇÉ)-CH‚ÇÇ-CH‚ÇÉ','3-Iodo-4-ethylhexane')]
    
    poly=[('CH‚ÇÇ=CH-CH‚ÇÇ-NH‚ÇÇ','Prop-2-enamine'),('CH‚ÇÉ-CH(O-CH‚ÇÉ)-CHO','2-Methoxypropanal'),('CH‚ÇÉ-C(CH‚ÇÉ)=CH-CO-CH‚ÇÉ','4-Methylpent-3-en-2-one'),('CH‚ÇÉ-CH‚ÇÇ-CH=CH-OH','Butenol'),('CH‚ÇÉ-CH‚ÇÇ-CH(COOH)-CH‚ÇÇ-OH','2-Ethyl-3-hydroxyproanoic acid')]
    
    cc=[('[Ni(CO)‚ÇÑ]','Tetracarbonylnickel'),('K‚ÇÉ[Al(C‚ÇÇO‚ÇÑ)‚ÇÉ]','Potassium trioxalatoaluminate(III)'),('Hg[Co(SCN)‚ÇÑ]','Mercury(I) tetrathiocyanato-S-cobaltate(III)'),('[Co(Cl)‚ÇÇ(en)‚ÇÇ]‚Å∫','Dichloridobis(ethane-1,2-diamine)cobalt(III)'),('K‚ÇÇ[Zn(OH)‚ÇÑ]','Potassium tetrahydroxidozincate(II)'),('[Co(NH‚ÇÉ)‚ÇÜ]Cl‚ÇÉ','Hexaamminecobalt(III) chloride'),('Fe‚ÇÑ[Fe(CN)‚ÇÜ]‚ÇÉ','Iron(III) hexacyanidoferrate(II)'),('[Co(NH‚ÇÉ)‚ÇÖ(Cl)]Cl‚ÇÇ','Pentaamminechloridocobalt(III) chloride'),('K‚ÇÇ[Ni(CN)‚ÇÑ]','Potassium tetracyanidonickelate(II)'),('[Co(NH‚ÇÉ)‚ÇÑ(H‚ÇÇO)‚ÇÇ]Cl‚ÇÉ','Tetraamminediaquacobalt(III) chloride')]

    
    cur.executemany("INSERT IGNORE INTO STUDY(TYPE,GRP,FORMULA,NAME) VALUES('ORGANIC','ALKANES',%s,%s)",alkanes)

    cur.executemany("INSERT IGNORE INTO STUDY(TYPE,GRP,FORMULA,NAME) VALUES('ORGANIC','ALKENES',%s,%s)",alkenes)

    cur.executemany("INSERT IGNORE INTO STUDY(TYPE,GRP,FORMULA,NAME) VALUES('ORGANIC','ALKYNES',%s,%s)",alkynes)
    
    cur.executemany("INSERT IGNORE INTO STUDY(TYPE,GRP,FORMULA,NAME) VALUES('ORGANIC','ALCOHOLS',%s,%s)",alcohols)

    cur.executemany("INSERT IGNORE INTO STUDY(TYPE,GRP,FORMULA,NAME) VALUES('ORGANIC','ALDEHYDES',%s,%s)",aldehydes)

    cur.executemany("INSERT IGNORE INTO STUDY(TYPE,GRP,FORMULA,NAME) VALUES('ORGANIC','KETONES',%s,%s)",ketones)

    cur.executemany("INSERT IGNORE INTO STUDY(TYPE,GRP,FORMULA,NAME) VALUES('ORGANIC','CARBOXYLIC ACIDS',%s,%s)",carboxylicacids)

    cur.executemany("INSERT IGNORE INTO STUDY(TYPE,GRP,FORMULA,NAME) VALUES('ORGANIC','ETHERS',%s,%s)",ethers)

    cur.executemany("INSERT IGNORE INTO STUDY(TYPE,GRP,FORMULA,NAME) VALUES('ORGANIC','AMINES',%s,%s)",amines)

    cur.executemany("INSERT IGNORE INTO STUDY(TYPE,GRP,FORMULA,NAME) VALUES('ORGANIC','ALKYL HALIDES',%s,%s)",alkylhalides)

    cur.executemany("INSERT IGNORE INTO STUDY(TYPE,GRP,FORMULA,NAME) VALUES('ORGANIC','POLYFUNCTIONAL',%s,%s)",poly)

    cur.executemany("INSERT IGNORE INTO STUDY(TYPE,FORMULA,NAME) VALUES('COORDINATION',%s,%s)",cc)

    mycon.commit()
    
    home_page()
