def login_page():

    cur.execute("CREATE TABLE IF NOT EXISTS LOGINPAGE(NAME VARCHAR(20),USERNAME VARCHAR(17) PRIMARY KEY NOT NULL,PASSWORD VARCHAR(17))")
    cur.execute("INSERT IGNORE INTO LOGINPAGE VALUE('Smriti Kinra','CARAT','0526')")
    while True:
        choice=input("\251\n\t\t\t\t\t\t\t\t\t\t\t\t\t  üîó LOGIN PAGE\n\n\nFirst time?\n\tEnter s/S to SIGN UP\n\n\nAlready a user üë§?\n\tEnter l/L for LOGIN \n\n ‚òõ ")
        print('='*125)

        if choice=='s' or choice=='S':
            while True:
                user=signup()
                if user:
                    if u_menu(user)==False:
                        return False
                    break
                else:
                    continue
            break

        elif choice=='l' or choice=='L':
            while True:
                user=login()
                if user:
                    if u_menu(user)==False:
                        return False
                    break
                else:
                    continue
            break

        else:
            print("WRONG CHOICE!!")
            print('.'*125)
            continue
        break

    mycon.commit()
    return False
def signup():

    print('\251\n\t\t\t\t\t\t\t\t\t\t\t\t\t || SIGNING UP ||\n\n\nCreate an account ->\n\t\t\t\t\t\t\t\t\t\t\t\t  USER üë§ CREDENTIALS üîê')
    user={}
    name=input("\n\tEnter your name: ")
    user["Name"]=name
    username=input("\n\tCreate a unique username: ")
    user["Username"]=username
    password=input("\n\tEnter a password: ")
    user["Password"]=password
    cur.execute("SELECT * FROM LOGINPAGE WHERE username='{}'".format(username))
    use=cur.fetchone()

    if use:
        print("\n\t\t\t\t\t\t\t\t\t\t\t  üî¥This username already exists!")
        while True:
            print('.'*125)
            choice=input("{:>122}".format("‚¨ÖÔ∏è‚¨ÖÔ∏è Enter b/B to go BACK ‚¨ÖÔ∏è‚¨ÖÔ∏è")+"\n\n"+"\tEnter s/S to SIGN UP again ‚ü≥\n\n ‚òõ ")
            print('-'*125)
            if choice=='s' or choice=='S':
                break
            elif choice=='b' or choice=='B':
                login_page()
            else:
                print("WRONG CHOICE!!")
                continue
    else:
        cur.execute('INSERT INTO LOGINPAGE(name,username,password)VALUES("{}","{}","{}")'.format(name,username,password))
        print("\n\t\t\t\t\t\t\t\t\t\t\t\t  üü¢Signup successful!!! üîë\nYou are now our USER!ü§ù\n\nRemember your credentials üîê for future use:)")
        print('.'*125)
        print("\n\nYOUR CREDENTIALS üîê :\n")
        for i in user.items():
            a,b=i
            print(a,": ",b)
        print('='*125)
        return username
    mycon.commit()
def login():

    print('\251\n\t\t\t\t\t\t\t\t\t\t\t\t\t || LOGING IN ||\n\n\nLogin your account üîí\n\n\t\t\t\t\t\t\t\t\t\t\t\t  USER üë§ CREDENTIALS üîê')

    name=input("\n\tEnter your name: ")
    username=input("\n\tEnter your username: ")
    password=input("\n\tEnter your password: ")

    cur.execute('SELECT * FROM LOGINPAGE WHERE name="{}" AND username="{}" AND password="{}"'.format(name,username,password))
    use=cur.fetchone()

    if use:
        print("\n\t\t\t\t\t\t\t\t\t\t\t\tüü¢Login successful!!! üîì")
        print('='*125)
        return username

    else:
        print("\n\t\t\t\t\t\t\t\t\t\t\t\t  üî¥OOPS! Login failed.\nPlease check your username and password carefully.")

        while True:
            print('.'*125)
            choice=input("\tEnter s/S to SIGN UP as a NEW USER üë§\n\t\t\tOR\n\tEnter l/L to try LOGIN again ‚ü≥\n\n ‚òõ")
            print('-'*125)

            if choice=='l' or choice=='L':
                break
            elif choice=='S' or choice=='s':
                if signup():
                    return True
                else:
                    continue
            else:
                print("WRONG CHOICE!!")
                continue

    mycon.commit()
