def main_menu():

    while True:

        choice=input("\251\nEnter 1 for ADMIN üë®üèª‚Äçüíº and 2 for USER üë§\n\n\t1) Admin üë®üèª‚Äçüíº\n\n\t2) User üë§\n\n ‚òõ  ")
        print('='*125)

        if choice=='1':

            while True:
                if a_page()==False:
                    if a_last_page()==False:
                        break
                    else:
                        u_menu(user)
                        print("\n\tü´° WELL DONE ~\n\n\t\t\t\t\t\t\t\t\t\t\tüí™üèªhwaiting!üí™üèª")
                        break
                else:
                    continue
                    
  
        elif choice=='2':

            if login_page()==False:
                if landing_page():
                    break


        else:
            print("WRONG CHOICE!!")
            print('.'*125)
            continue

        break
def a_page():

    global user

    cur.execute("CREATE TABLE IF NOT EXISTS ADMINPAGE(NAME VARCHAR(20) PRIMARY KEY,USERNAME VARCHAR(17) NOT NULL,PASSWORD VARCHAR(17))")
    cur.execute("INSERT IGNORE INTO ADMINPAGE VALUES('Prasharadha','Admin','ps'),('Smriti Kinra','CARAT','0526')")

    
    print('\251\n\t\t\t\t\t\t\t\t\t\t\t\t  ADMIN üë®üèª‚Äçüíº CREDENTIALS üîê')
    name=input("\n\tEnter your admin name: ")
    user=input("\n\tEnter your admin username: ")
    password=input("\n\tEnter your admin password: ")

    cur.execute("SELECT * FROM ADMINPAGE WHERE name='{}' AND username='{}' AND password='{}'".format(name,user,password))
    use=cur.fetchone()

    if use:
        print("\n\t\t\t\t\t\t\t\t\t\t\t\tüü¢Login successful!!! üîì")
        print('='*125)
        if a_menu()==False:
            return False

    else:
        print("\t\t\t\t\t\t\t\t\t\t\t   üî¥OOPS! Admin Login failed.")
        print('-'*125)
        print("\t\t\t\t\t\t\t\t\t\t\t\t\t  Try again ‚ü≥")
        print('.'*125)
        return True
    return user
    mycon.commit()
def a_menu():

    while True:
        choice = input("\251\n\t\t\t\t\t\t\t\t\t\t\t\t\t  ‚ò∞ ADMIN MENU\n\nEnter d/D to Direct into EDITING PAGE üìù"+"{:>80}".format("‚û§‚û§")+"\n"+"{:>125}".format("Enter e/E to")+"\n"+"{:>122}".format("EXIT")+"\n"+"{:>120}".format("‚û§‚û§")+"\n"+" ‚òõ ")
        print('='*125)

        if choice=='d' or choice=='D':
            if a_study()==False:
                return False

        elif choice=='e' or choice=='E':
            return False

        else:
            print("WRONG CHOICE!!")
            print('.'*125)
            continue
