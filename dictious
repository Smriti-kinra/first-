print("------------------------🔖 DICTious 🔖-----------------------\n\n\t\t    DICTIONARY RANKINGS\n")
cont = 'yes'
while cont.lower() in ("yes", "yoo", "yo", "yeahh", "ofcourse", "ofc", "yeah", "y", "yea"):
    print('=' * 62)
    wor = input('🔖\n\n  Enter a word whose rank you wanna know🧐:) ').lower()
    word = list(wor)
    length = len(word)
    rank = 1
    i = 0
    while i < length:
        j = i + 1
        smaller_chars = []
        while j < length:
            if word[j] < word[i] and word[j] not in smaller_chars:
                smaller_chars.append(word[j])
            j += 1
        for ch in smaller_chars:
            temp = []
            k = i
            while k < length:
                temp.append(word[k])
                k += 1
            temp.remove(ch)
            freq = {}
            x = 0
            while x < len(temp):
                if temp[x] in freq:
                    freq[temp[x]] += 1
                else:
                    freq[temp[x]] = 1
                x += 1
            fact = 1
            y = 1
            while y <= len(temp):
                fact *= y
                y += 1
            denom = 1
            for val in freq.values():
                f = 1
                z = 1
                while z <= val:
                    f *= z
                    z += 1
                denom *= f
            rank += fact // denom
        i += 1

    print('-' * 62)
    print(f"The rank of '{wor}' in dictionary order is: {rank}")
    
    while True:
        cont = input('\n\n  Do you want to know more?! ')
        if cont.lower() in ['n', 'no', 'nope', 'nehh', "neh", "no thanks","yes", "yoo", "yo", "yeahh", "ofcourse", "ofc", "yeah", "y", "yea"]:
            break
        else:
            print('.' * 62)
            print("Sorry I didn’t catch that!\nPlease write properly...")
            print('.' * 62)
    if cont.lower() in ['n', 'no', 'nope', 'nehh', "neh", "no thanks"]:
        break

print('\n\t\t\t~ THANK YOU FOR USING DICTious 📘✨ ~\n')
print('=' * 62)